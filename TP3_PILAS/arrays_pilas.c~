#include "pilas.h"
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#define MAX 100 
struct PilaRep
{
    int top; // mantiene el indice del array al que estÃ¡ apuntando actualmente
    int cantidad; // mantiene la cantidad de elementos agregados
    TipoElemento *elemento; // apunta a un tipo elemento del array
};


Pila p_crear()
{
    Pila nueva_pila = (Pila*) malloc(sizeof(Pila));
    nueva_pila->elemento = (TipoElemento*) calloc(MAX, sizeof(TipoElemento));
    nueva_pila->top = nueva_pila->elemento[0];
    nueva_pila->cantidad = 0;
    return nueva_pila;
}
